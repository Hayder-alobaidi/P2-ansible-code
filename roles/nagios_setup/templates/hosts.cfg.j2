# templates/host.cfg.j2

define host {
    use                     linux-server
    host_name               {{ inventory_hostname }}
    alias                   {{ ansible_facts['alias'] | default(inventory_hostname) }}
    address                 {{ ansible_host }}
}

define service {
    use                     generic-service
    host_name               {{ inventory_hostname }}
    service_description     PING
    check_command           check_ping!100.0,20%!500.0,60%
}
